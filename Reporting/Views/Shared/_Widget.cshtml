@model Reporting.Models.WidgetModel

<p>ID: <input data-bind="value: Id, event: { change:  $root.drawWidget }" /></p>
<p>Data Url: <strong data-bind="text: dataUrl"></strong></p>

<div class="widget-box" data-model='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))'>

    <div class="widget-header widget-header-flat widget-header-small">
        <h5>
            <i class="icon-signal"></i>
            <span data-bind="text: Title"></span>
        </h5>

        <div class="widget-toolbar no-border">

            <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
                <span data-bind="text: Query"></span>
                <i class="icon-angle-down icon-on-right bigger-110"></i>
            </button>

            <ul data-bind="foreach: QueryOptions" class="dropdown-menu pull-right dropdown-125 dropdown-lighter dropdown-caret">

                <li class="active">
                    <a href="#" class="blue">
                        <i class="icon-caret-right bigger-110">&nbsp;</i>
                        <span data-bind="click: $parent.updateQuery, text: $data"></span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="widget-body">
        <div class="widget-main">
            <div id="piechart-placeholder-@Model.Id" data-id="@Model.Id" data-url="@Model.DataUrl"></div>
        </div>

        <!-- /widget-main -->
    </div>
    <!-- /widget-body -->
</div>
<!-- /widget-box -->
